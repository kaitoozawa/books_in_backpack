<div class="book">
  <div class="row">
    <aside class="col-xs-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><%= @book.title %></h3>
        </div>
        <div class="panel-body">
          <img class="media-object img-rounded img-responsive" src="<%= @book.image %>" alt="">
        </div>
      </div>
    </aside>
    <div class="col-xs-8">
      <ul>
        <li>Author: <%= @book.author %></li>
        <li>Language: <%= @book.language %></li>
        <li><%= @book.page %> Page</li>
        <li>Description: <%= @book.description %></li>
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-2">
      <%= link_to 'Update Book', edit_book_path(@book), class: 'btn btn-primary' %>
    </div>
  </div>
</div>