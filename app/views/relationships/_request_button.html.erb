<% unless current_user == user %>
    <% if current_user.requestings_exist?(user) %>
      <%= form_for(current_user.relationships.find_by(request_id: user.id), html: { method: :delete }) do |f| %>
        <%= hidden_field_tag :request_id, user.id %>
        <%= f.submit 'Unrequest', class: 'btn btn-default btn-block' %>
      <% end %>
    <% else %>
      <%= form_for(current_user.relationships.build) do |f| %>
        <%= hidden_field_tag :request_id, user.id %>
        <%= f.submit 'Request', class: 'btn btn-default btn-block' %>
      <% end %>
    <% end %>
<% end %>